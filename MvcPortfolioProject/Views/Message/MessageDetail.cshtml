@model MvcPortfolioProject.Models.TblMessage
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Details</h2>
<table class="table table-responsive table-striped">
    <tr>
        <th>Gönderen Ad Soyad:</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Gönderen Email:</th>
        <td>@Model.Email</td>
    </tr>

    <tr>
        <th>Mesaj İçeriğik:</th>
        <td>@Model.MessageContent</td>
    </tr>
</table>
<br />
<a href="/Message/Index" class="btn btn-primary">Mesajlara Geri Dön</a>