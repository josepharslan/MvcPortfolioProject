@model MvcPortfolioProject.Models.TblEducation
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    ViewBag.Title = "CreateEducation";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Eğitim Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x => x.EducationId)
    <div class="mb-3">
        <label class="">Okul Adı</label>
        @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label class="">Bölüm Adı</label>
        @Html.TextBoxFor(x => x.Department, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label class="">Açıklama</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        <label class="">Başlama Tarihi</label>
        <input type="datetime" name="StartDate" value="@Model.StartDate.ToString("d")" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="">Bitiş Tarihi </label><span><strong>(Eğer Devam Ediyorsa Boş Bırakın)</strong></span>
        <input type="datetime" name="EndDate" value="@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("d") : "")" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Derece </label><span><strong>(Lisans,Önlisans,Yükseklisans vs.)</strong></span>
        <select name="Degree" class="form-select">
            <option disabled >Derece Seçiniz</option>
            <option value="Önlisans" @(Model.Degree == "Önlisans"? "selected" : "")>Önlisans</option>
            <option value="Lisans" @(Model.Degree == "Lisans"? "selected" : "")>Lisans</option>
            <option value="Yüksek Lisans" @(Model.Degree == "Yüksek Lisans"? "selected" : "")>Yüksek Lisans</option>
            <option value="Doktora" @(Model.Degree == "Doktora"? "selected" : "")>Doktora</option>
        </select>
    </div>
    <button class="btn btn-outline-success">Kaydet</button>
</form>


