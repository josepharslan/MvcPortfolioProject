@model List<MvcPortfolioProject.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Hakkımda</h2>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Cv Bilgisi</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.ImageUrl" style="width: 100px; height: 100px;" />
            </td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                @if (string.IsNullOrEmpty(item.CvUrl))
                {
                    <span>CV Yüklenmedi</span>
                }
                else
                {
                    <span>CV Yüklendi</span>
                }
            </td>
            <td>
                <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>

<br />